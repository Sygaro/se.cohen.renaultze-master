{
  "name": "se.cohen.renaultze",
  "version": "3.0.0",
  "description": "Modern TypeScript-based Renault & Dacia app for Homey with comprehensive EV support",
  "main": ".homeybuild/app.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:homey": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage && rm -rf .homeybuild/*.js .homeybuild/*.map",
    "validate": "homey app validate",
    "ci": "npm run type-check && npm run lint && npm run test:coverage"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "homey": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bypo/se.cohen.renaultze-master.git"
  },
  "author": "Jonathan Cohen / Oreste Dimaggio / Reidar Gran",
  "contributors": [
    "Jonathan Cohen <jonathan@cohen.se>",
    "Oreste Dimaggio <oreste@dimaggio.it>",
    "Reidar Gran (v3 TypeScript rewrite)"
  ],
  "license": "LGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/bypo/se.cohen.renaultze-master/issues"
  },
  "homepage": "https://github.com/bypo/se.cohen.renaultze-master",
  "engines": {
    "node": ">=25.0.0"
  }
}
